.container
  .row.election_overview
    .col-md-8.col-md-offset-2.text-left
      .row
        .col-md-8
          %h1 Candidate Overview
          
        .col-md-4
          - if current_organisation.is_admin?(current_user)
            %button.pull-right.btn.btn-default.show_election_button{:type => "button"}= link_to 'New candidate', new_organisation_election_path(current_organisation)
      %p.lead= "This is an overview of all of the candidates in the #{link_to @election.title, organisation_election_path(current_organisation, @election)}.".html_safe
  %hr.col-md-10.col-md-offset-1
  %hr
  - @candidates.each do |candidate|
    = render 'candidates/candidate', candidate: candidate
