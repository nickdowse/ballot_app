= form_for [current_organisation, @election, @candidate] do |f|
  - if @election.errors.any?
    #error_explanation
      %h2= "#{pluralize(@election.errors.count, "error")} prohibited this election from being saved:"
      %ul
        - @election.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :name
    = f.text_field :name, class: "form-control"
  .field.form-group
    = f.label :description
    = f.text_area :description, class: "form-control"
    = f.hidden_field :created_by, value: current_user.id
  .field.form-group
    = f.label :avatar, "Picture"
    = f.file_field :avatar
  .actions
    = f.submit 'Save', class: "btn btn-default"
    %button.btn.btn-default{:type => "button"}= link_to 'Delete', [current_organisation, @election, @candidate], :method => :delete, :data => { :confirm => 'Are you sure?' }
