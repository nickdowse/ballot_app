= form_for [current_organisation, @election, @candidate] do |f|
  - if @candidate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@candidate.errors.count, "error")} prohibited this candidate from being saved:"
      %ul
        - @candidate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
    = f.hidden_field :organisation_id, value: current_organisation.id
  .actions
    = f.submit 'Save'
