%h1 Listing election_allowed_emails

%table
  %thead
    %tr
      %th Email
      %th Created at
      %th Election
      %th Organisation
      %th
      %th
      %th

  %tbody
    - @election_allowed_emails.each do |election_allowed_email|
      %tr
        %td= election_allowed_email.email
        %td= election_allowed_email.created_at.to_date.to_formatted_s :long_ordinal
        %td= election_allowed_email.election_id
        %td= election_allowed_email.organisation_id
        %td= link_to 'Show', organisation_election_election_allowed_email_path(current_organisation, @election.id, election_allowed_email)
        - if current_user.admin?
          %td= link_to 'Edit', edit_organisation_election_election_allowed_email_path(current_organisation, @election, election_allowed_email)
          %td= link_to 'Remove', organisation_election_election_allowed_email_path(current_organisation, @election.id, election_allowed_email), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Election allowed email', new_organisation_election_election_allowed_email_path(current_organisation, @election)
